    <style>
.container{
    position: relative;
    max-width: 100%;
    width: 100%;
    height: 100%;
    min-height: 120vh;
    background: #fff;
    border-radius: 10px;
    box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    /* margin: 0 20px; */
    margin: auto;
    /* margin-top: 150px; */
    background-image: url(../images/IMG-20230113-WA0006.jpg);
      background-size: cover;
      position: relative;
}


.container .forms{
    display: flex;
    align-items: center;
    height: 100%;
    width: 60%;
    transition: height 0.2s ease;
    margin: auto;
}


.container .form{
    width: 50%;
    padding: 30px;
    background-color: #fff;
    transition: margin-left 0.18s ease;
    margin: auto;
    margin-top: 20vh;
}

.container.active .login{
    margin-left: -50%;
    /* opacity: 0; */
    display: none;
    transition: margin-left 0.18s ease, opacity 0.15s ease;
}

.container .signup{
    /* opacity: 0; */
    display: none;
    transition: opacity 0.09s ease;
}
.container.active .signup{
    /* opacity: 1; */
    display: block;
    transition: opacity 0.2s ease;
    margin-top: 5%;
}

.container.active .forms{
    height: 600px;
}
.container .form .title{
    position: relative;
    font-size: 27px;
    font-weight: 600;
}

.form .title::before{
    content: '';
    position: absolute;
    left: 0;
    bottom: 0;
    height: 3px;
    width: 30px;
    background-color: #dc3545;
    border-radius: 25px;
}

.form .input-field{
    position: relative;
    height: 50px;
    width: 100%;
    margin-top: 30px;
}

.input-field input{
    position: absolute;
    height: 100%;
    width: 100%;
    padding: 0 35px;
    border: none;
    outline: none;
    font-size: 16px;
    border-bottom: 2px solid #ccc;
    border-top: 2px solid transparent;
    transition: all 0.2s ease;
}

.input-field input:is(:focus, :valid){
    border-bottom-color: #dc3545;
}

.input-field i{
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    color: #999;
    font-size: 23px;
    transition: all 0.2s ease;
}

.input-field input:is(:focus, :valid) ~ i{
    color: #dc3545;
}

.input-field i.icon{
    left: 0;
}
.input-field i.showHidePw{
    right: 0;
    cursor: pointer;
    padding: 10px;
}

.form .checkbox-text{
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 20px;
}

.checkbox-text .checkbox-content{
    display: flex;
    align-items: center;
}

.checkbox-content input{
    margin-right: 10px;
    accent-color: #dc3545;
}

.form .text{
    color: #333;
    font-size: 14px;
    margin-bottom: 0px !important;
}

.form a.text{
    color: #dc3545;
    text-decoration: none;
}
.form a:hover{
    text-decoration: underline;
}

.form .button{
    margin-top: 35px;
}

.form .button input{
    border: none;
    color: #fff;
    font-size: 17px;
    font-weight: 500;
    letter-spacing: 1px;
    border-radius: 6px;
    background-color: #dc3545;
    cursor: pointer;
    transition: all 0.3s ease;
}

.button input:hover{
    background-color: #dc3545;
}

.form .login-signup{
    margin-top: 30px;
    text-align: center;
}
 
